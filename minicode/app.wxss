page{
    height: 100%;
}

.view-container{
    min-height: 100%;
    display: flex;
    flex-direction: column;
    font: 14px/1.5 "Helvetica Neue", Helvetica, Arial, "Microsoft Yahei", sans-serif;
    color: #333;
}

.page-body{
    flex: 1;
}

.page-header{
    padding: 5px 10px;
    box-shadow: 2px 2px 2px #ccc;
}

.user-info{
    display: inline-block;
}

.user-info .user-avatar{
    width: 40px;
    height: 40px;
    vertical-align: middle;
    border-radius: 50%;
    margin-right: 8px;
}

.user-info .user-nickName{
    vertical-align: middle;
}

.page-nav{
    float: right;
    font-size: 16px;
    line-height: 40px;
}


.container{
    max-width: 750px;
    margin: 0 auto;
    padding: 30px;
}

.page-footer{
    font-size: 12px;
    line-height: 40px;
    text-align: center;
    color: #999;
    letter-spacing: .5px;
}